generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model mailTemplates {
  id        Int      @id @default(autoincrement())
  event     String
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  isActive  Boolean  @default(true)
}

model messageTemplates {
  id        Int      @id @default(autoincrement())
  event     String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  isActive  Boolean  @default(true)
}
